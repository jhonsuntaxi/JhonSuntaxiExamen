<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JhonSuntaxiExamen.vistaLogin">
    <ContentPage.Content>
        <StackLayout>


            <Image Source="LogoUIsrael.png">
            </Image>

            <Entry x:Name="txtUsuario" Placeholder="Usuario" HorizontalTextAlignment="Center" FontSize="20">
            </Entry>
            
            <Entry x:Name="txtPasswd" IsPassword="True" Placeholder="Contraseña" HorizontalTextAlignment="Center">
            </Entry>

            <Button x:Name="btnAbrir" Clicked="btnAbrir_Clicked" Text="Ingresar" 
                    BackgroundColor="Crimson" TextColor="White" FontSize="20">
            </Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>